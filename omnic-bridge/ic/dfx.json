{
    "canisters": {
        "bridge": {
			  "candid": "src/canister/bridge.did",
			  "package": "omnic-bridge",
			  "type": "custom",
			  "wasm": "target/wasm32-unknown-unknown/release/bridge_opt.wasm",
			  "build": [
				"cargo build --target wasm32-unknown-unknown --bin bridge --release",
				"ic-cdk-optimizer target/wasm32-unknown-unknown/release/bridge.wasm -o target/wasm32-unknown-unknown/release/bridge_opt.wasm"
			  ]
        }
    },
    "defaults": {
        "build": {
            "args": "",
            "packtool": ""
        }
    },
    "networks": {
        "local": {
            "bind": "127.0.0.1:8000",
            "type": "ephemeral"
        }
    },
    "version": 1
}
